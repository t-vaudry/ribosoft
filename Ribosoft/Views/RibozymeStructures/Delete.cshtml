@model Ribosoft.Models.RibozymeStructure

@{
    ViewData["Title"] = "Delete Ribozyme Structure";
}

<h2 class="my-3">Delete ribozyme structure</h2>

<div class="card my-3 box-shadow">
    <div class="card-body">
        <h5 class="card-title border-bottom border-gray pb-2 mb-3">Ribozyme structure</h5>
        <p>Are you sure you want to delete this ribozyme structure?</p>
        <dl class="row mb-0">
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Ribozyme)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Ribozyme.Name)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Sequence)
            </dt>
            <dd class="col-10">
                <code>@Html.DisplayFor(model => model.Sequence)</code>
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Structure)
            </dt>
            <dd class="col-10">
                <code>@Html.DisplayFor(model => model.Structure)</code>
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.SubstrateTemplate)
            </dt>
            <dd class="col-10">
                <code>@Html.DisplayFor(model => model.SubstrateTemplate)</code>
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.SubstrateStructure)
            </dt>
            <dd class="col-10">
                <code>@Html.DisplayFor(model => model.SubstrateStructure)</code>
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.Cutsite)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.Cutsite)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.PostProcess)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.PostProcess)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.CreatedAt)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.CreatedAt)
            </dd>
            <dt class="col-2">
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </dt>
            <dd class="col-10">
                @Html.DisplayFor(model => model.UpdatedAt)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" class="clearfix">
    <a asp-controller="Ribozymes" asp-action="Details" asp-route-id="@Model.RibozymeId" class="btn btn-secondary float-md-left"><i class="fas fa-arrow-left mr-1"></i> Cancel</a>
    <input type="hidden" asp-for="Id"/>
    <input type="submit" value="Delete" class="btn btn-danger float-md-right" />
</form>