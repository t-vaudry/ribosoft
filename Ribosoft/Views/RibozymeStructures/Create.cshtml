@model Ribosoft.Models.RibozymeStructure

@{
    ViewData["Title"] = "Create";
}

<h2 class="my-3">Create a ribozyme structure</h2>

<form asp-action="Create" asp-route-ribozymeId="@ViewBag.RibozymeId">
    <div class="card my-3 box-shadow">
        <div class="card-body">        
            <h5 class="card-title border-bottom border-gray pb-2 mb-3">Structure</h5>
            @Html.EditorForModel()
        </div>
    </div>
    
    <div class="clearfix">
        <a class="btn btn-secondary float-md-left" asp-controller="Ribozymes" asp-action="Details" asp-route-id="@ViewBag.RibozymeId"><i class="fas fa-arrow-left mr-1"></i> Cancel</a>
        <input type="submit" value="Create" class="btn btn-primary float-md-right" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
